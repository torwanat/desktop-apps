<Window x:Name="Port_Scanner" x:Class="Port_Scanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Port_Scanner"
        mc:Ignorable="d"
        Title="Port Scanner" Height="450" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="281*"/>
            <ColumnDefinition Width="161*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbRangeStart" HorizontalAlignment="Left" Height="23" Margin="50,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" SpellCheck.IsEnabled="True" Text="1"/>
        <TextBox x:Name="tbRangeEnd" HorizontalAlignment="Left" Height="23" Margin="275,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Text="65000"/>
        <Button x:Name="btStart" Content="Start" HorizontalAlignment="Left" Margin="50,121,0,0" VerticalAlignment="Top" Width="75" Click="btStart_Click"/>
        <Label x:Name="lbScanning" Content="Curently scanning: " HorizontalAlignment="Left" Margin="160,120,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbCurrentlyScanning" Content="" HorizontalAlignment="Left" Margin="19.246,120,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <ListView x:Name="lvPorts" HorizontalAlignment="Left" Height="215" Margin="50,175,0,0" VerticalAlignment="Top" Width="345" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ports: " Width="345"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btStop" Content="Stop" HorizontalAlignment="Left" Margin="50,96,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="btStop_Click" IsEnabled="False"/>

    </Grid>
</Window>
